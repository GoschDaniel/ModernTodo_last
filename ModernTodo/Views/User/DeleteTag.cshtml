@model ModernTodo.Models.TaskModelVm

@{
    ViewData["Title"] = "DeleteTodo";
}

<h1>DeleteTodo</h1>

@foreach (var item in Model.AvailableTags)
{
    <div>
        <h4>Todo details:</h4>
        <dl class="row">

            <dt class="col-sm-2">
                Id:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Id)
            </dd>

            <dt class="col-sm-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Name)
            </dd>

            <dt class="col-sm-2">
                HexColor
            </dt>
            <dd class="col-sm-10">
                <input type="color" value="#@item.HexColor" disabled/>
            </dd>

          
        </dl>

        <form asp-action="ConfirmDeleteTag" asp-route-id="@item.Id">
            <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
            <a asp-action="Tags" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
}
